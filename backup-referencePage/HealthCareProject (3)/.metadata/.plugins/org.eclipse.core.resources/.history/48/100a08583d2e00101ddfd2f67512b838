package utilities;

import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.Properties;

import constantData.ConstantData;

public class FetchDataFromProperty {

	public static Properties readUserNameFromProperty1() throws IOException
	{
		FileReader reader=new FileReader(ConstantData.UserNameFilePath);
		Properties prop=new Properties();
		prop.load(reader);
		return prop;
		
	}
	
	public static String readUserNameFromProperty() {
		String username ;
		try {
             username = FetchDataFromProperty.readUserNameFromProperty().getProperty("UserName");
        } catch (IOException e) {
            e.printStackTrace();
            // handle default or fallback value
            username = "Djoe";
        }
	public static Properties readDataFromProperty() throws IOException
	{
		FileReader reader=new FileReader(ConstantData.PropertyFilePath);
		Properties prop=new Properties();
		prop.load(reader);
		return prop;
		
	}
}
